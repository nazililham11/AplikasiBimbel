            </Grid>

        </Border>

        <Grid Grid.Column="1"
              Background="{StaticResource Accent_White}">

            <!-- Content Media -->
            <ContentControl Grid.Row="1"
                            Content="{Binding CurrentView}"/>

        </Grid>

    </Grid>

</Window>
