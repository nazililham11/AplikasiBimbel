<UserControl
    x:Class="AplikasiBimbel.Admin.Views.Dashboard.TeacherDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:AplikasiBimbel.Converters;assembly=AplikasiBimbel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AplikasiBimbel.Admin.Views.Dashboard"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Converters  -->
        <converter:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Border
            Padding="0"
            Background="{StaticResource PrimaryBackgroundLight}"
            BorderBrush="{StaticResource Accent_Gray-300}"
            BorderThickness="1,0,0,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="10">

                    <Grid.ColumnDefinitions>
                        <!--  Label  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  Gap  -->
                        <ColumnDefinition Width="20" />
                        <!--  FIeld  -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!--  Header  -->
                        <RowDefinition Height="Auto" />
                        <!--  Gap  -->
                        <RowDefinition Height="10" />
                        <!--  Name  -->
                        <RowDefinition Height="Auto" />
                        <!--  Username  -->
                        <RowDefinition Height="Auto" />
                        <!--  Phone Number  -->
                        <RowDefinition Height="Auto" />
                        <!--  Address  -->
                        <RowDefinition Height="Auto" />
                        <!--  Access  -->
                        <RowDefinition Height="Auto" />
                        <!--  Status  -->
                        <RowDefinition Height="Auto" />
                        <!--  Date Added  -->
                        <RowDefinition Height="Auto" />
                        <!--  Gap  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="{StaticResource FontSizeLarge}"
                            Text="{Binding CurrentTeacherData.Name, Mode=OneWay, FallbackValue={}Teacher Name}"
                            TextTrimming="CharacterEllipsis" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontSize="{StaticResource FontSizeRegular}"
                            Opacity=".7"
                            Text="{Binding CurrentTeacherData.Teacher_ID, Mode=OneWay, StringFormat={}{0:0000}, FallbackValue=Teacher_ID}"
                            TextTrimming="CharacterEllipsis" />

                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">

                            <!--  TODO: Create Style For Button Hover  -->

                            <!--  Edit  -->
                            <Button
                                Margin="5,0"
                                Padding="3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding TeacherEdit}"
                                ToolTip="Edit"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">

                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Foreground="{StaticResource PrimaryForeground}"
                                    Kind="Edit" />
                            </Button>


                            <!--  Reset Password  -->
                            <Button
                                Margin="5,0"
                                Padding="3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding TeacherResetPassword}"
                                ToolTip="Reset Password"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">

                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Foreground="{StaticResource PrimaryForeground}"
                                    Kind="PasswordReset" />
                            </Button>

                            <!--  Save  -->
                            <Button
                                Margin="5,0"
                                Padding="3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding TeacherSaveChanges}"
                                ToolTip="Save"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">

                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Foreground="{StaticResource PrimaryForeground}"
                                    Kind="Check" />
                            </Button>

                            <!--  Cancel  -->
                            <Button
                                Margin="5,0"
                                Padding="3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding CancelEdit}"
                                ToolTip="Cancel"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">

                                <materialDesign:PackIcon
                                    Width="25"
                                    Height="25"
                                    Foreground="{StaticResource PrimaryForeground}"
                                    Kind="Cancel" />
                            </Button>
                        </StackPanel>

                    </Grid>

                    <!--  TODO:Set Maximum Character For Textboxes Field  -->

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="1"
                        Background="{StaticResource PrimaryBackgroundDark}"
                        BorderThickness="0" />

                    <!--  Name  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="Name" />

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Name, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />



                    <!--  Username  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="Username" />

                    <TextBox
                        Grid.Row="3"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Username, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />



                    <!--  Phone Number  -->
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="Phone Number" />

                    <TextBox
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.PhoneNumber, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />


                    <!--  Address  -->
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Top"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="Address" />

                    <TextBox
                        Grid.Row="5"
                        Grid.Column="2"
                        Height="50"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Address, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />


                    <!--  Access  -->
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Text="Access" />

                    <ComboBox
                        Grid.Row="6"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        SelectedIndex="{Binding CurrentTeacherData.Permission, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <ComboBoxItem Content="Super Admin" />
                        <ComboBoxItem Content="Admin" />
                        <ComboBoxItem Content="Guru" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Teacher.Permission, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />

                    <!--  Status  -->
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="Status" />

                    <ComboBox
                        Grid.Row="7"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        SelectedIndex="{Binding CurrentTeacherData.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <ComboBoxItem Content="Aktif" />
                        <ComboBoxItem Content="Tidak Aktif" />
                    </ComboBox>

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="2"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeRegular}"
                        Text="{Binding CurrentTeacherData.Teacher.Status, Mode=OneWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />



                    <!--  Date Added  -->
                    <WrapPanel
                        Grid.Row="8"
                        Grid.Column="2"
                        Margin="0,4,0,6"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <TextBlock FontSize="{StaticResource FontSizeRegular}" Text="Added On " />
                        <TextBlock FontSize="{StaticResource FontSizeRegular}" Text="{Binding CurrentTeacherData.DateIn}" />
                        <TextBlock FontSize="{StaticResource FontSizeRegular}" Text=" And Active Until " />
                        <TextBlock FontSize="{StaticResource FontSizeRegular}" Text="{Binding CurrentTeacherData.DateOut}" />
                    </WrapPanel>

                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
